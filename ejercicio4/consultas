VIEW `sucursalvista` AS
    select 
        `r`.`codSucursal` AS `codSucursal`,
        `r`.`ciudadSucursal` AS `ciudadSucursal`
    from
        `reparacion` `r`
    group by `r`.`codSucursal`


VIEW `clientevista` AS
    select 
        `r`.`dniCliente` AS `dniCliente`,
        `r`.`ciudadCliente` AS `ciudadCliente`
    from
        `reparacion` `r`
    group by `r`.`dniCliente`


VIEW `sucursalesporclientes` AS
    select 
        `cv`.`dniCliente` AS `dniCliente`,
        `sv`.`codSucursal` AS `codSucursal`
    from
        (`clientevista` `cv`
        join `sucursalvista` `sv`)
    where
        (`cv`.`ciudadCliente` = `sv`.`ciudadSucursal`)


=============================================


VIEW `reparacion`.`sucursalesporcliente` AS
    select 
        `reparacion`.`cliente`.`dniCliente` AS `dniCliente`,
        `reparacion`.`sucursal`.`codSucursal` AS `codSucursal`
    from
        (`reparacion`.`cliente`
        join `reparacion`.`sucursal` ON ((`reparacion`.`cliente`.`ciudadCliente` = `reparacion`.`sucursal`.`ciudadSucursal`)))


